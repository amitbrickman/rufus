{
  "manifest_version": 3,
  "name": "Rufus - GPT Response Beautifier",
  "version": "1.0",
  "description": "Make GPT responses more readable and beautiful with just one click",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/html2canvas.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
